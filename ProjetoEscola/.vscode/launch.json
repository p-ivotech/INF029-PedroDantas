{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [ 
    "-g",
    "*.c",
    "-o",
    "output/Escola.exe"
],
      "stopAtEntry": false,
      "externalConsole": true,
      "cwd": "c:/C/Projetos/ProjetoEscola/ProjetoEscola",
      "program": "c:/C/Projetos/ProjetoEscola/ProjetoEscola/build/Debug/outDebug",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}